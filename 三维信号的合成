x = 0.318*np.sin(2*np.pi*t)-0.318* np.sin(2*np.pi*t)+0.106*np.sin(6*np.pi*t)-0.106*np.sin(6*np.pi*t)+0.063*np.sin(10*np.pi*t)-0.063*np.sin(10*np.pi*t)
