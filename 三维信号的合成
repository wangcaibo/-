x = 0.318*np.sin(2*np.pi*t)-0.318* np.sin(2*np.pi*t)
plt.xlim(-2,2)
plt.ylim(-1.5,1.5)
ax.set_zlim(-1.5,1.5)
plt.plot(t,y,x)
